---
interface Song {
  description?: string;
  title: string;
  mp3: string;
  genre: string;
}

interface Footnote {
  ref: string;
  category: string;
  keyword: string;
  content: string;
}

interface Props {
  id: string;
  title: string;
  subtitle: string;
  verses: string;
  color?: string;
  accentColor?: string;
  image?: string;
  verseData: any[];
  media: {
    practice?: { title: string; verseRef: string; content?: string };
    song?: { title: string; mp3: string };
    songs?: Song[];
    podcast?: { title: string; duration?: string; description?: string; scriptFile?: string };
    audioBible?: { title: string; mp3: string };
  };
  exegesis?: {
    section: string;
    label: string;
  };
  lang: string;
  isFirst?: boolean;
  layoutIndex?: number;
}

const { id, title, subtitle, verses, image, verseData, media, exegesis, lang, isFirst, layoutIndex = 0 } = Astro.props;
const base = '/aperto-website';

const songs: Song[] = media.songs || (media.song ? [{ ...media.song, genre: '' }] : []);
const hasMedia = media.practice || songs.length > 0 || media.podcast || exegesis || media.audioBible;

function formatTitle(text: string): string {
  return text.split('').map(char => {
    if (/[A-Z]/.test(char)) {
      return '<span class="cap">' + char + '</span>';
    }
    return char;
  }).join('');
}

// Collect all footnotes for mobile view
const allFootnotes: (Footnote & { verseNum: number; verseIdx: number; fnIdx: number })[] = [];
verseData.forEach((verse, idx) => {
  verse.footnotes.forEach((fn: Footnote, fnIdx: number) => {
    allFootnotes.push({ ...fn, verseNum: verse.number, verseIdx: idx, fnIdx });
  });
});

// Group verses into poetry blocks and prose sections
type VerseGroup = { type: 'prose' | 'poetry'; verses: { verse: any; idx: number }[] };
const verseGroups: VerseGroup[] = [];
let currentGroup: VerseGroup | null = null;

verseData.forEach((verse, idx) => {
  const type = verse.isPoetry ? 'poetry' : 'prose';
  if (!currentGroup || currentGroup.type !== type) {
    currentGroup = { type, verses: [] };
    verseGroups.push(currentGroup);
  }
  currentGroup.verses.push({ verse, idx });
});

const practiceModalId = `practice-modal-${id}`;
const podcastModalId = `podcast-modal-${id}`;

// Category icons
const categoryIcons: Record<string, string> = {
  text: 'translate',
  kultur: 'public', culture: 'public',
  leben: 'favorite', life: 'favorite',
  kontext: 'link', context: 'link',
  unglaublich: 'help', hard: 'help'
};

// Category labels (for display)
const categoryLabels: Record<string, string> = {
  text: 'Text',
  kultur: 'Kultur', culture: 'Culture',
  leben: 'Leben', life: 'Life',
  kontext: 'Kontext', context: 'Context',
  unglaublich: 'Schwierig', hard: 'Difficult'
};
---

<section class="pericope-card py-16 md:py-24" id={id}>
  <div class="editorial-container max-w-6xl mx-auto px-6 md:px-12">

    <!-- Header -->
    <header class="editorial-header mb-6 max-w-xl ml-auto mr-auto md:mr-0 md:ml-[20%]">
      <p class="passage-reference mb-2">
        {lang === 'de' ? 'Lukas' : 'Luke'} {verses}
      </p>
      <h2 class="headline-mixed text-3xl md:text-4xl lg:text-5xl leading-[1.1]" set:html={formatTitle(title)} />
    </header>

    <!-- Image - offset to left, aligned with text end -->
    {image && (
      <figure class="editorial-image mb-10">
        <img
          src={`${base}/images/luke/1/${image}`}
          alt={title}
          class="w-full aspect-video object-cover rounded"
          loading="lazy"
        />
      </figure>
    )}

    <!-- Verses - grouped by prose/poetry -->
    <div class="verses-container max-w-xl ml-auto mr-auto md:mr-0 md:ml-[20%]">
      {verseGroups.map((group) => (
        group.type === 'poetry' ? (
          <div class="poetry-block">
            {group.verses.map(({ verse, idx }) => (
              <div class="poetry-verse">
                <span class="verse-text" set:html={verse.text} />{verse.footnotes.length > 0 && (<span class="verse-footnotes hidden lg:inline">{verse.footnotes.map((fn: Footnote, fnIdx: number) => (<button class="fn-btn" data-fn-id={`popover-${id}-${idx}-${fnIdx}`} type="button" aria-label={`Footnote: ${fn.keyword}`}><span class="material-symbols-rounded">info</span></button>))}</span>)}
              </div>
            ))}
          </div>
        ) : (
          <div class="prose-section">
            {group.verses.map(({ verse, idx }) => (
              <span class="prose-verse">
                <span class="verse-text" set:html={verse.text} />
                {verse.footnotes.length > 0 && (
                  <span class="verse-footnotes hidden lg:inline">
                    {verse.footnotes.map((fn: Footnote, fnIdx: number) => (
                      <button
                        class="fn-btn"
                        data-fn-id={`popover-${id}-${idx}-${fnIdx}`}
                        type="button"
                        aria-label={`Footnote: ${fn.keyword}`}
                      >
                        <span class="material-symbols-rounded">info</span>
                      </button>
                    ))}
                  </span>
                )}
              </span>
            ))}
          </div>
        )
      ))}
    </div>

    <!-- Desktop popovers -->
    {allFootnotes.map((fn) => (
      <div
        id={`popover-${id}-${fn.verseIdx}-${fn.fnIdx}`}
        class="fn-popover hidden"
        data-popover
      >
        <div class="flex items-center gap-2 mb-2">
          <span class="material-symbols-rounded text-sm" style="color: var(--color-accent)">
            {categoryIcons[fn.category.toLowerCase()] || 'info'}
          </span>
          <span class="uppercase tracking-wider text-[10px] font-medium" style="color: var(--color-accent)">
            {categoryLabels[fn.category.toLowerCase()] || fn.category}
          </span>
        </div>
        <p class="font-medium text-sm mb-2" style="color: var(--color-accent)">{fn.keyword}</p>
        <p class="text-sm leading-relaxed" style="color: var(--color-text)">{fn.content}</p>
        <button class="fn-close" type="button" aria-label="Close">&times;</button>
      </div>
    ))}

    <!-- Mobile footnotes -->
    {allFootnotes.length > 0 && (
      <div class="footnotes-mobile max-w-xl ml-auto mr-auto md:mr-0 md:ml-[20%] lg:hidden mt-10 border-t pt-6" style="border-color: var(--color-border)">
        <p class="text-sm flex items-center gap-2 mb-4" style="color: var(--color-text-muted)">
          <span class="material-symbols-rounded text-base">info</span>
          {allFootnotes.length} {lang === 'de' ? 'Anmerkungen' : 'notes'}
        </p>
        <div class="space-y-2">
          {allFootnotes.map((fn, fnIdx) => (
            <div class="mobile-fn-wrapper">
              <button
                class="mobile-fn-btn flex items-center gap-2 text-sm cursor-pointer text-left"
                data-fn-id={`popover-mobile-${id}-${fnIdx}`}
                type="button"
              >
                <span class="material-symbols-rounded text-sm" style="color: var(--color-accent)">
                  {categoryIcons[fn.category.toLowerCase()] || 'info'}
                </span>
                <span style="color: var(--color-accent); font-weight: 500">{fn.keyword}</span>
              </button>
              <div
                id={`popover-mobile-${id}-${fnIdx}`}
                class="fn-popover-mobile hidden"
                data-popover-mobile
              >
                <div class="flex items-center gap-2 mb-2">
                  <span class="material-symbols-rounded text-sm" style="color: var(--color-accent)">
                    {categoryIcons[fn.category.toLowerCase()] || 'info'}
                  </span>
                  <span class="uppercase tracking-wider text-[10px] font-medium" style="color: var(--color-accent)">
                    {categoryLabels[fn.category.toLowerCase()] || fn.category}
                  </span>
                </div>
                <p class="font-medium mb-2" style="color: var(--color-accent)">{fn.keyword}</p>
                <p class="text-sm leading-relaxed" style="color: var(--color-text)">{fn.content}</p>
                <button class="fn-close" type="button" aria-label="Close">&times;</button>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Media Section -->
    {hasMedia && (
      <div class="media-section max-w-xl ml-auto mr-auto md:mr-0 md:ml-[20%] mt-16">
        <div class="media-grid grid grid-cols-1 sm:grid-cols-2 gap-4">

          {media.audioBible && (
            <div class="media-card media-card-audio group">
              <div class="media-card-inner">
                <div class="media-card-header">
                  <div class="media-icon-wrapper">
                    <span class="material-symbols-rounded text-xl">auto_stories</span>
                  </div>
                  <div class="media-card-text">
                    <span class="media-card-label">{lang === 'de' ? 'Audiobibel' : 'Audio Bible'}</span>
                    <span class="media-card-title">{media.audioBible.title}</span>
                  </div>
                </div>
                <audio controls class="w-full h-10 mt-3" preload="none">
                  <source src={`${base}/audio/audiobible/${media.audioBible.mp3}`} type="audio/mpeg" />
                </audio>
              </div>
            </div>
          )}

          {media.practice && (
            <button
              class="media-card media-card-practice group"
              onclick={`document.getElementById('${practiceModalId}').showModal()`}
              type="button"
            >
              <div class="media-card-inner">
                <div class="media-card-header">
                  <div class="media-icon-wrapper media-icon-practice">
                    <span class="material-symbols-rounded text-xl">self_improvement</span>
                  </div>
                  <div class="media-card-text">
                    <span class="media-card-label">{lang === 'de' ? 'Geistliche Übung' : 'Spiritual Practice'}</span>
                    <span class="media-card-title">{media.practice.title}</span>
                  </div>
                </div>
                <div class="media-card-arrow">
                  <span class="material-symbols-rounded">arrow_forward</span>
                </div>
              </div>
            </button>
          )}

          {songs.map((song) => (
            <div class="media-card media-card-song group">
              <div class="media-card-inner">
                <div class="media-card-header">
                  <div class="media-icon-wrapper media-icon-song">
                    <span class="material-symbols-rounded text-xl">music_note</span>
                  </div>
                  <div class="media-card-text">
                    <span class="media-card-label">{song.genre || 'Song'}</span>
                    <span class="media-card-title">{song.title}</span>
                  </div>
                </div>
                <audio controls class="w-full h-10 mt-3" preload="none">
                  <source src={`${base}/audio/songs/${song.mp3}`} type="audio/mpeg" />
                </audio>
              </div>
            </div>
          ))}

          {media.podcast && (
            <button
              class="media-card media-card-podcast group"
              onclick={`document.getElementById('${podcastModalId}').showModal()`}
              type="button"
            >
              <div class="media-card-inner">
                <div class="media-card-header">
                  <div class="media-icon-wrapper media-icon-podcast">
                    <span class="material-symbols-rounded text-xl">podcasts</span>
                  </div>
                  <div class="media-card-text">
                    <span class="media-card-label">Podcast {media.podcast.duration ? `· ${media.podcast.duration}` : ''}</span>
                    <span class="media-card-title">{media.podcast.title}</span>
                  </div>
                </div>
                <div class="media-card-arrow">
                  <span class="material-symbols-rounded">arrow_forward</span>
                </div>
              </div>
            </button>
          )}

          {exegesis && (
            <a
              href={`${base}/exegesis/luke/1#${exegesis.section}`}
              class="media-card media-card-exegesis group"
            >
              <div class="media-card-inner">
                <div class="media-card-header">
                  <div class="media-icon-wrapper media-icon-exegesis">
                    <span class="material-symbols-rounded text-xl">menu_book</span>
                  </div>
                  <div class="media-card-text">
                    <span class="media-card-label">{lang === 'de' ? 'Exegese' : 'Exegesis'}</span>
                    <span class="media-card-title">{lang === 'de' ? 'Tiefer studieren' : 'Study deeper'}</span>
                  </div>
                </div>
                <div class="media-card-arrow">
                  <span class="material-symbols-rounded">arrow_forward</span>
                </div>
              </div>
            </a>
          )}

        </div>
      </div>
    )}

  </div>
</section>

<!-- Practice Modal -->
{media.practice && (
  <dialog id={practiceModalId} class="modal p-0 rounded-2xl max-w-2xl w-full mx-auto backdrop:bg-black/50">
    <div class="modal-content p-8 md:p-12">
      <header class="flex justify-between items-start mb-8">
        <div>
          <p class="text-xs tracking-widest opacity-60 mb-2" style="color: var(--color-accent)">
            {lang === 'de' ? 'GEISTLICHE ÜBUNG' : 'SPIRITUAL PRACTICE'}
          </p>
          <h3 class="headline-mixed text-2xl md:text-3xl" set:html={formatTitle(media.practice.title)} />
        </div>
        <button onclick={`document.getElementById('${practiceModalId}').close()`} class="text-2xl opacity-40 hover:opacity-100" type="button">&times;</button>
      </header>
      <div class="leading-relaxed" style="color: var(--color-text)">
        {media.practice.content ? (
          <div class="practice-content prose prose-lg max-w-none" set:html={media.practice.content} />
        ) : (
          <p class="mb-6">{lang === 'de' ? 'Eine kontemplative Übung basierend auf diesem Abschnitt.' : 'A contemplative practice based on this passage.'}</p>
        )}
      </div>
      <footer class="mt-8 pt-6 border-t" style="border-color: var(--color-border)">
        <button onclick={`document.getElementById('${practiceModalId}').close()`} class="px-6 py-2 rounded-full text-sm text-white" style="background: var(--color-accent)" type="button">
          {lang === 'de' ? 'Schließen' : 'Close'}
        </button>
      </footer>
    </div>
  </dialog>
)}

<!-- Podcast Modal -->
{media.podcast && (
  <dialog id={podcastModalId} class="modal p-0 rounded-2xl max-w-2xl w-full mx-auto backdrop:bg-black/50">
    <div class="modal-content p-8 md:p-12">
      <header class="flex justify-between items-start mb-8">
        <div>
          <p class="text-xs tracking-widest opacity-60 mb-2" style="color: var(--color-accent)">PODCAST</p>
          <h3 class="headline-mixed text-2xl md:text-3xl" set:html={formatTitle(media.podcast.title)} />
        </div>
        <button onclick={`document.getElementById('${podcastModalId}').close()`} class="text-2xl opacity-40 hover:opacity-100" type="button">&times;</button>
      </header>
      <p class="opacity-70 italic">{lang === 'de' ? 'Podcast-Episode kommt bald.' : 'Podcast episode coming soon.'}</p>
      <footer class="mt-8 pt-6 border-t" style="border-color: var(--color-border)">
        <button onclick={`document.getElementById('${podcastModalId}').close()`} class="px-6 py-2 rounded-full text-sm text-white" style="background: var(--color-accent)" type="button">
          {lang === 'de' ? 'Schließen' : 'Close'}
        </button>
      </footer>
    </div>
  </dialog>
)}

<style>
  .pericope-card {
    background-color: var(--color-cream);
    border-bottom: 1px solid var(--color-border);
  }

  .pericope-card:nth-child(even) {
    background-color: var(--color-paper);
  }

  /* Image - offset left, right edge aligns with text */
  .editorial-image {
    max-width: 85%;
    margin-left: -2%;
  }

  @media (min-width: 768px) {
    .editorial-image {
      max-width: calc(20% + 36rem); /* left offset + text width */
      margin-left: 0;
      margin-right: auto;
    }
  }

  .editorial-image img {
    border-radius: 4px;
  }

  /* Verses container */
  .verses-container {
    line-height: 1.85;
  }

  .prose-section {
    margin-bottom: 0.5rem;
  }

  /* Poetry block - continuous */
  .poetry-block {
    padding-left: 1.5rem;
    border-left: 2px solid var(--color-border);
    margin: 1.5rem 0;
  }

  .poetry-verse {
    display: block;
    margin-bottom: 0.4em;
  }
  
  .poetry-verse:last-child {
    margin-bottom: 0;
  }
  
  .poetry-verse .verse-text {
    display: contents;
  }

  .verse-footnotes {
    white-space: nowrap;
    margin-right: 0.75em;
  }

  :global(.poetry-line-1) {
    display: block;
  }

  :global(.poetry-line-2) {
    display: block;
    padding-left: 1.5rem;
  }

  :global(.poetry-line-3) {
    display: block;
    padding-left: 3rem;
  }
  
  /* Last poetry line should be inline to allow footnote to follow */
  .verse-text :global(span:last-child) {
    display: inline;
  }

  /* Footnote buttons */
  .fn-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
    margin-left: 1px;
    margin-right: 0;
    vertical-align: baseline;
    position: relative;
    top: -1px;
    color: var(--color-accent);
    opacity: 0.4;
    cursor: pointer;
    transition: opacity 0.15s;
    background: none;
    border: none;
    padding: 0;
  }

  .fn-btn:hover {
    opacity: 1;
  }

  .fn-btn .material-symbols-rounded {
    font-size: 16px;
  }

  /* Desktop popovers */
  .fn-popover {
    position: fixed;
    z-index: 1000;
    width: 320px;
    padding: 1.25rem;
    border-radius: 12px;
    background: var(--color-cream);
    border: 1px solid var(--color-border-strong);
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }

  /* Mobile popovers */
  .fn-popover-mobile {
    position: fixed;
    left: 1rem;
    right: 1rem;
    bottom: 1rem;
    z-index: 1000;
    padding: 1.5rem;
    border-radius: 16px;
    background: var(--color-cream);
    border: 1px solid var(--color-border-strong);
    box-shadow: 0 20px 40px rgba(0,0,0,0.25);
  }

  .fn-close {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    font-size: 1.5rem;
    line-height: 1;
    color: var(--color-warm-gray);
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.25rem;
  }

  .fn-close:hover {
    color: var(--color-charcoal);
  }

  .mobile-fn-btn {
    background: none;
    border: none;
    opacity: 0.85;
  }

  .mobile-fn-btn:hover {
    opacity: 1;
  }

  /* Media cards */
  .media-card {
    background: var(--color-paper);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.25s ease;
    text-align: left;
    cursor: pointer;
  }

  .media-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    border-color: var(--color-border-strong);
  }

  .media-card-inner {
    padding: 1rem;
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .media-card-header {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .media-icon-wrapper {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: linear-gradient(135deg, var(--color-beige), var(--color-sand));
    color: var(--color-accent);
  }

  .media-icon-practice {
    background: linear-gradient(135deg, #E8E4F0, #D4CDE8);
    color: #6B5A8E;
  }

  .media-icon-song {
    background: linear-gradient(135deg, #F0E8E4, #E8D4C4);
    color: #8E6B5A;
  }

  .media-icon-podcast {
    background: linear-gradient(135deg, #E4F0E8, #C4E8D4);
    color: #5A8E6B;
  }

  .media-icon-exegesis {
    background: linear-gradient(135deg, #E4E8F0, #C4D4E8);
    color: #5A6B8E;
  }

  .media-card-text {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .media-card-label {
    display: block;
    font-family: 'Switzer', -apple-system, sans-serif;
    font-size: 0.65rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 1px;
  }

  .media-card-title {
    display: block;
    font-family: 'Switzer', -apple-system, sans-serif;
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-charcoal);
    line-height: 1.3;
  }

  .media-card-arrow {
    position: absolute;
    right: 0.875rem;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0;
    transition: all 0.2s ease;
    color: var(--color-accent);
  }

  .media-card:hover .media-card-arrow {
    opacity: 1;
    transform: translateY(-50%) translateX(3px);
  }

  .media-card-audio {
    background: linear-gradient(135deg, var(--color-paper), var(--color-beige));
  }

  /* Modal styles */
  .modal-content {
    background: var(--color-paper);
    color: var(--color-charcoal);
  }

  dialog {
    border: none;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  dialog::backdrop {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  dialog[open] {
    animation: fadeIn 0.2s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }

  audio {
    border-radius: 8px;
  }
  audio::-webkit-media-controls-panel {
    background: var(--color-beige);
  }
</style>

