---
interface Props {
  lang: string;
}

const { lang } = Astro.props;

const labels = {
  de: {
    audioBible: "Hörbibel",
    practices: "Geistliche Übungen", 
    podcasts: "Podcasts",
    songs: "Lieder"
  },
  en: {
    audioBible: "Audio Bible",
    practices: "Spiritual Practices",
    podcasts: "Podcasts", 
    songs: "Songs"
  }
};

const l = labels[lang as keyof typeof labels] || labels.en;
---

<div class="media-buttons grid grid-cols-2 md:grid-cols-4 gap-4 my-12 p-6 bg-beige/30 rounded-lg">
  <button 
    class="media-btn flex flex-col items-center gap-2 p-4 bg-cream rounded-lg border border-beige hover:border-terracotta hover:shadow-md transition-all"
    data-modal="modal-audiobible"
  >
    <span class="material-symbols-rounded text-2xl">auto_stories</span>
    <span class="text-sm font-medium">{l.audioBible}</span>
  </button>
  
  <button 
    class="media-btn flex flex-col items-center gap-2 p-4 bg-cream rounded-lg border border-beige hover:border-olive hover:shadow-md transition-all"
    data-modal="modal-practices"
  >
    <span class="material-symbols-rounded text-2xl">self_improvement</span>
    <span class="text-sm font-medium">{l.practices}</span>
  </button>
  
  <button 
    class="media-btn flex flex-col items-center gap-2 p-4 bg-cream rounded-lg border border-beige hover:border-mediterranean hover:shadow-md transition-all"
    data-modal="modal-podcasts"
  >
    <span class="material-symbols-rounded text-2xl">mic</span>
    <span class="text-sm font-medium">{l.podcasts}</span>
  </button>
  
  <button 
    class="media-btn flex flex-col items-center gap-2 p-4 bg-cream rounded-lg border border-beige hover:border-gold hover:shadow-md transition-all"
    data-modal="modal-songs"
  >
    <span class="material-symbols-rounded text-2xl">music_note</span>
    <span class="text-sm font-medium">{l.songs}</span>
  </button>
</div>

<script>
  document.querySelectorAll('.media-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const modalId = btn.getAttribute('data-modal');
      if (modalId) {
        document.getElementById(modalId)?.classList.remove('hidden');
      }
    });
  });
</script>
