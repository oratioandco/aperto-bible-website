---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations, type Lang } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'de' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'pl' } },
    { params: { lang: 'tr' } },
  ];
}

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);

// Get the features list - handle as array
const features = [
  t('legal.accessibility.features.list.0'),
  t('legal.accessibility.features.list.1'),
  t('legal.accessibility.features.list.2'),
  t('legal.accessibility.features.list.3'),
  t('legal.accessibility.features.list.4'),
  t('legal.accessibility.features.list.5'),
];
---

<BaseLayout title={t('legal.accessibility.title')} lang={lang}>
  <article class="py-16 md:py-24 px-8 md:px-16 lg:px-24">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl md:text-5xl mb-12 headline-mixed">{t('legal.accessibility.title')}</h1>

      <p class="text-lg leading-relaxed mb-8" style="color: #5A5A5A;">
        {t('legal.accessibility.intro')}
      </p>

      <section class="mb-12">
        <h2 class="text-2xl md:text-3xl mb-4 headline-mixed">{t('legal.accessibility.standards.title')}</h2>
        <p class="text-lg leading-relaxed" style="color: #5A5A5A;">
          {t('legal.accessibility.standards.text')}
        </p>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl md:text-3xl mb-4 headline-mixed">{t('legal.accessibility.features.title')}</h2>
        <ul class="list-disc list-inside space-y-2 text-lg" style="color: #5A5A5A;">
          {features.map((feature) => (
            <li>{feature}</li>
          ))}
        </ul>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl md:text-3xl mb-4 headline-mixed">{t('legal.accessibility.feedback.title')}</h2>
        <p class="text-lg leading-relaxed" style="color: #5A5A5A;">
          {t('legal.accessibility.feedback.text')}
        </p>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl md:text-3xl mb-4 headline-mixed">{t('legal.accessibility.ongoing.title')}</h2>
        <p class="text-lg leading-relaxed" style="color: #5A5A5A;">
          {t('legal.accessibility.ongoing.text')}
        </p>
      </section>
    </div>
  </article>
</BaseLayout>
